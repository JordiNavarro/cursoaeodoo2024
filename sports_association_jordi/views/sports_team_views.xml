<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sports_team_tree_view" model="ir.ui.view">
        <field name="name">sports_team.tree.view</field>
        <field name="model">sports.team</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Teams">
                <field name="name"/>
                <field name="logo" optional="show"/>
                <field name="sport_id" optional="show"/>
            </tree>
        </field>
    </record>  

    <record id="sports_sport_view_form" model="ir.ui.view">
        <field name="name">sports_team.view.form</field>
        <field name="model">sports.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Starters" name="all_marked" type="object" class="btn-success"/>
                    <button string="Substitutes" name="all_substitute" type="object" class="btn-danger"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="logo"/>
                        <field name="sport_id"/>
                    </group>
                    <notebook>
                        <page name="name" string="Players">
                            <field name="players_ids">
                                <tree editable="bottom" string="Players">
                                    <field name="name"/>
                                    <field name="age"/>
                                    <field name="position"/>
                                    <field name="starter"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_sport_team" model="ir.actions.act_window">
        <field name="name">sport.team</field>
        <field name="res_model">sports.team</field>
       <field name="view_mode">tree,form</field>
       <field name="context">{}</field>
       <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Team
            </p>
        </field>
    </record>
</odoo>